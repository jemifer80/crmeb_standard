				// 	uni.createVideoContext(this.dataList[this.k].id+''+this.k,this).pause();//ÊöÇÂÅú‰ª•ÂêéÁªßÁª≠Êí≠Êîæ
				// }
				// --------------- ending
			},
			doubleLike() {
				if (this.dataList[this.k].is_like == false) {
					this.dataList[this.k].like_num += 1;
					this.dataList[this.k].is_like = true;
